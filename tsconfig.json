{
  "include": ["src/index.ts"],
  "compilerOptions": {
    "lib": ["dom", "es2015"],
    "outDir": "./build/",
    "sourceMap": false,
    "noImplicitAny": true,
    "jsx": "react",
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  }
}
